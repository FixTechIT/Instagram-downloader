            width: 100vw;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            flex-direction: column;
            align-items: center;
            text-align: justify;
        }

        .section {
            width: 70%;
            display: none;
        }

        .stories {
            display: block;
        }

        .section h3 {
            margin: 20px 0;
        }

        .section h4 {
            margin: 10px 0;
        }

        /* Footer */

